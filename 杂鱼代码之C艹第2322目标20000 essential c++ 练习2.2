{
	vector<int>pent;
	const string title("pentagonal numeric series ");

	if (Penta(pent, 0))
		Display_elements(pent, title);
	if (Penta(pent, 8))
		Display_elements(pent, title);
	if (Penta(pent, 14))
		Display_elements(pent, title);
	if (Penta(pent, 138))
